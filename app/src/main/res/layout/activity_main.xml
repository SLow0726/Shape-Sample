<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:id="@+id/btn"
            android:background="@drawable/shape"
            android:layout_width="150dp"
            android:layout_height="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:text="Button" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.261"/>
    <Button
            android:text="Red"
            android:textColor="#FFFFFF"
            android:background="#FF0000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_red"
            android:layout_marginStart="30dp" app:layout_constraintStart_toEndOf="@+id/btn_blue"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="43dp"
            android:layout_marginBottom="116dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:text="Green"
            android:textColor="#FFFFFF"
            android:background="#419245"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_green"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="42dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_blue" android:layout_marginEnd="32dp"
            android:layout_marginBottom="116dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Blue"
            android:textColor="#FFFFFF"
            android:background="#3F51B5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_blue" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="116dp" app:layout_constraintHorizontal_bias="0.498"/>

</androidx.constraintlayout.widget.ConstraintLayout>